<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Todo List</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>
  <body>
    {{>header}}
    {{#if loggedIn}}
    <div class="tasks-section">
      
      <form action="/addtask" method="post">
        <input type="text" placeholder="enter your new task" name="task" required>
        <button type="submit">Add</button>
      </form>
      <div class="tasks-list">
        {{#if tasks.length}}
        <ul>
      {{#each tasks}}
        <li><span class="task-text">{{this}}</span> <button class="check-btn">âœ“</button> <button class="fa fa-trash delete-btn"></button></li>
      {{/each}}
    </ul>
    {{else}}
    <p>Your Tasks list is empty</p>
    {{/if}}
      </div>
    </div>
    {{else}}
     <div class="tasks-section">
      <p>Please Login to manage your tasks</p>
    </div>
    {{/if}}
    <script src="/js/index.js"></script>

  </body>
</html>